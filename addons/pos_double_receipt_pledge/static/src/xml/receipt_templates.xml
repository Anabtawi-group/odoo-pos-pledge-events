<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="pos_double_receipt_pledge.SalesReceipt">
        <div class="pos-receipt">
            <h2>Sales Receipt</h2>
            <t t-call="point_of_sale.ReceiptHeader"/>
            <t t-call="point_of_sale.Orderlines">
                <t t-set="orderlines" t-value="receipt.orderlines"/>
            </t>
            <t t-call="point_of_sale.ReceiptTotals"/>
        </div>
    </t>

    <t t-name="pos_double_receipt_pledge.PledgeReceipt">
        <div class="pos-receipt">
            <h2>Plate Pledge Receipt</h2>
            <t t-call="point_of_sale.ReceiptHeader"/>
            <div style="margin-top:6px; font-weight:bold;">
                Receipt No: <t t-esc="receipt.name"/>
            </div>
            <t t-if="receipt._customer_mobile">
                <div>Customer Mobile: <t t-esc="receipt._customer_mobile"/></div>
            </t>
            <t t-if="receipt._customer_name">
                <div>Customer: <t t-esc="receipt._customer_name"/></div>
            </t>
            <div style="margin:8px 0; font-weight:bold;">
                Refundable upon plate return
            </div>
            <t t-call="point_of_sale.Orderlines">
                <t t-set="orderlines" t-value="receipt.orderlines"/>
            </t>
            <t t-call="point_of_sale.ReceiptTotals"/>
        </div>
    </t>
</templates>
