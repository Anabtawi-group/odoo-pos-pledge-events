<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_pos_config_form_pledge_category" model="ir.ui.view">
        <field name="name">pos.config.form.pledge.category</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='pos_interface']" position="inside">
                <separator string="Pledge (Deposit)"/>
                <field name="pledge_pos_categ_id" options="{'no_create': True}"/>
            </xpath>
        </field>
    </record>
</odoo>
