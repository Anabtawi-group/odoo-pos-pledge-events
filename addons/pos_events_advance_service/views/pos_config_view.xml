<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_pos_config_form_events" model="ir.ui.view">
    <field name="name">pos.config.form.events</field>
    <field name="model">pos.config</field>
    <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
    <field name="arch" type="xml">
      <!-- Odoo 19 safe xpath: insert a new page in the notebook -->
      <xpath expr="//form/sheet/notebook" position="inside">
        <page string="Events">
          <group>
            <field name="advance_product_id" options="{'no_create': True}"/>
            <field name="service_fee_product_id" options="{'no_create': True}"/>
          </group>
          <group string="Employee Plates Accounting">
            <field name="employee_plate_receivable_account_id" options="{'no_create': True}"/>
            <field name="plates_clearing_account_id" options="{'no_create': True}"/>
          </group>
        </page>
      </xpath>
    </field>
  </record>
</odoo>
